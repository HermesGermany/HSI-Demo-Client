//- index.pug
extends ../../pages/views/page.pug

include ../../page-elements/views/form/field.pug
include widgets/defaults.pug

block title
  | #{__('Create Label for Return Order (Version 1)')}

append breadcrumbs
  li.header-breadcrumb
    a.header-breadcrumb-link(href='/hsi/returnorderlabel_v1/') #{__('Create Label for Return Order (Version 1)')}

block content
  div#hsi.hsi.flex-wrapper
    include widgets/header.pug
    #hsi-container.hsi-container.flex-block.flex-center
      h2 #{__('Create Label for Return Order (Version 1)')}
      include widgets/error.pug
      if request
        h3 Request
        pre= JSON.stringify(request, null, 2)
      if response
        h3 Response
        pre= JSON.stringify(response, null, 2)
        if pdfFilename
          h3
            a.pdf-link(href = '/' + pdfFilename) PDF öffnen
        if jsonFilename
          h3
            a.json-link(href = '/' + jsonFilename, target='_blank') JSON-Datei öffnen
      else
        form#returnorderlabelform.returnorderlabelform(method='POST', action='/hsi/returnorderlabel_v1/')
          + field(__('Return Order ID'), {
              type: 'text',
              name: 'returnOrderID',
              value: returnOrderID || post.returnOrderID,
              size: 30
          })
          + field(__('Output Format'), {
            type: 'radio',
            name: 'headers.Accept',
            entries: {
              'application/shippinglabel-pdf+json': __('PDF Label'),
              'application/shippinglabel-data+json': __('Label data (JSON)')
            }
          })
          + field('', {
            type: 'submit',
            value: __('create label')
          })
